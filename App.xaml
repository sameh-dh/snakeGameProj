<Application x:Class="SnakeGameProj.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeGameProj"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <SolidColorBrush x:Key= "BackgroundColor"> #211E2B </SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#312C40</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#EBEBEB</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#7F000000</SolidColorBrush>
        <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
